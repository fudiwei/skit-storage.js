{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "importHelpers": false,
        "isolatedModules": true,
        "lib": [
            "DOM",
            "ESNext",
            "ScriptHost"
        ],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "sourceMap": true,
        "strict": true,
        "target": "ES2015",
        "types": [
            "chai",
            "mocha",
            "wechat-miniprogram"
        ],
        "typeRoots": [
            "./node_modules/@type",
            "./types"
        ]
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts",
        "types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}